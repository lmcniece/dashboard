<div id="{{user}}" class="tab-pane fade">
    <h1 class="page-header">
        <span class="emphasize">{{user}}}}</span>
    </h1>
</div>
<div class="container">
    <div id="king_queen-container" class="container">
        <img id="archon" src="http://placekitten.com/g/300/400">
    </div>
    <div id="quote-container" class="container">
        <h3 style="text-align:center">
          "Oh boy." 
        </h3>
    </div>
    <h1>
    <div style="margin-bottom:30px;">
            <span id="drink" style="margin-right:5px;"></span><i class="fa fa-glass" aria-hidden="true" style="margin-right:20px;"></i>
            <span id="water" style="margin-right:5px;"></span><i class="fa fa-tint" aria-hidden="true" style="margin-right:20px;"></i>
            <span id="smoke" style="margin-right:5px;"></span><i class="vs vs-smoking" aria-hidden="true"></i>
